<div id="menu-footer" class="menu-footer">
  <!-- SEARCH LINK -->
  <%= link_to brands_path do %>
    <div class="icon-wrapper-menu">
      <%= render 'icons/search_icon'%>
    </div>
  <% end %>
  <!-- GUARDROBE LINK -->
  <% if current_user %>
    <%= link_to user_products_path(current_user) do %>
      <div class="icon-wrapper-menu">
        <%= render 'icons/garderobe_icon'%>
      </div>
    <% end %>
  <% else %>
    <%= link_to  new_user_session_path do %>
      <div class="icon-wrapper-menu">
        <%= render 'icons/garderobe_icon' %>
      </div>
    <% end %>
  <% end %>
  <!-- USER LINK -->
  <div class="icon-wrapper-menu">
    <%= render 'icons/user_icon'%>
  </div>
  <!-- MENU LINK -->
  <div class="icon-wrapper-menu">
    <%= render 'icons/hamburger_icon'%>
  </div>
</div>
