<div class="mobile-container">
  <!-- header -->
  <div class="header-section">
    <!-- teaser -->
    <div>
      <p>Choose your Brand</p>
      <h1>Most popular Brands</h1>
    </div>
    <!-- avatar -->
    <%= render 'components/avatar', picture:current_user.photo.key %>
  </div>
  <!-- body -->
  <div class="brand-selection">
    <% @brands.each do |brand| %>
      <%= render 'components/brand-card', picture:brand.photo.key, brand:brand %>
    <% end %>
  </div>


</div>

